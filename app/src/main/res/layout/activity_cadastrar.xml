<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cadastrar">

        <TextView
            android:id="@+id/txtFarmAppCadastrar"
            style="@style/LoginFarmApp"
            android:text="FarmApp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/containerComponentsCadastrar"
            style="@style/ContainerComponents"
            android:layout_height="440dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtFarmAppCadastrar" />

        <EditText
            android:id="@+id/editUserCadastrar"
            style="@style/EditText"
            android:drawableRight="@drawable/ic_user"
            android:hint="LaboratÃ³rio"
            android:inputType="textUri"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsCadastrar"
            app:layout_constraintStart_toStartOf="@id/containerComponentsCadastrar"
            app:layout_constraintTop_toTopOf="@id/containerComponentsCadastrar" />

        <EditText
            android:id="@+id/editPasswordCadastrar"
            style="@style/EditText"
            android:hint="Senha"
            android:maxLength="25"
            android:drawableRight="@drawable/ic_eye"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@id/containerComponentsCadastrar"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsCadastrar"
            app:layout_constraintTop_toBottomOf="@id/editUserCadastrar"
            />

        <EditText
            android:id="@+id/editPasswordConfCadastrar"
            style="@style/EditText"
            android:hint="Confirme a senha"
            android:maxLength="25"
            android:drawableRight="@drawable/ic_eye"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@id/containerComponentsCadastrar"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsCadastrar"
            app:layout_constraintTop_toBottomOf="@id/editPasswordCadastrar"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCadastrar"
            style="@style/Button"
            android:layout_marginTop="45dp"
            android:text="@string/cadastrar"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editPasswordConfCadastrar"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCadastrarVoltar"
            style="@style/Button"
            android:text="@string/voltar"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCadastrar"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>