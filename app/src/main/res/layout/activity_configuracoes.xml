<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Configuracoes">

        <View
            android:id="@+id/containerComponentsConfiguracoes"
            style="@style/ContainerComponents"
            android:layout_height="595dp"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editUserConfiguracoes"
            style="@style/EditText"
            android:hint="Laboratório"
            android:inputType="textUri"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintStart_toStartOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintTop_toTopOf="@id/containerComponentsConfiguracoes" />

        <EditText
            android:id="@+id/editPasswordConfiguracoes"
            style="@style/EditText"
            android:hint="Senha"
            android:maxLength="25"
            android:drawableRight="@drawable/ic_eye"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintTop_toBottomOf="@id/editUserConfiguracoes"
            />

        <EditText
            android:id="@+id/editPasswordConfConfiguracoes"
            style="@style/EditText"
            android:hint="Confirme a senha"
            android:maxLength="25"
            android:drawableRight="@drawable/ic_eye"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintTop_toBottomOf="@id/editPasswordConfiguracoes"
            />

        <EditText
            android:id="@+id/editConfCusto"
            style="@style/EditText"
            android:hint="Custo adicional"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintTop_toBottomOf="@id/editPasswordConfConfiguracoes"
            />

        <EditText
            android:id="@+id/editConfValor"
            style="@style/EditText"
            android:hint="Valor mínimo"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintEnd_toEndOf="@id/containerComponentsConfiguracoes"
            app:layout_constraintTop_toBottomOf="@id/editConfCusto"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfSalvar"
            style="@style/Button"
            android:text="@string/salvar"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editConfValor"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfVoltar"
            style="@style/Button"
            android:text="@string/voltar"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnConfSalvar"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>